{
  "name": "apps",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "app:dev": "vite",
    "app:browser": "PORT=3000 TS_NODE_PROJECT=tsconfig.script.json node -r ts-node/register -r tsconfig-paths/register scripts/start.ts",
    "start": "multiplerun dev",
    "build": "tsc --noEmit && vite build",
    "pack": "rocket-punch build",
    "publish": "rocket-punch publish",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "test": "react-scripts test --colors",
    "coverage": "react-scripts test --colors --coverage",
    "precommit": "lint-staged",
    "cli:test": "TS_NODE_PROJECT=tsconfig.script.json node -r ts-node/register -r tsconfig-paths/register src/terra-templates/bin.test.ts"
  },
  "multiplerun": {
    "dev": [
      "yarn run tsc --watch --noEmit",
      [
        "yarn run app:dev",
        {
          "command": "yarn run app:browser",
          "wait": "5000"
        }
      ]
    ]
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "cross-env CI=true react-scripts test --colors --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts?(x)",
      "!**/*.d.ts?(x)",
      "!**/*.stories.ts?(x)",
      "!**/__*__/**"
    ]
  },
  "dependencies": {
    "copy-github-directory": "^1.4.1",
    "fix-hmr": "^1.0.2",
    "isomorphic-fetch": "^3.0.0",
    "open": "^8.4.0",
    "prompts": "^2.4.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.1.1",
    "react-query": "^3.34.0",
    "react-router-dom": "^6.0.2",
    "react-use-clipboard": "^1.0.7",
    "remark-gfm": "^3.0.1",
    "styled-components": "^5.3.3",
    "yargs": "^17.3.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^6.4.8",
    "@storybook/addon-links": "^6.4.8",
    "@storybook/addon-storysource": "^6.4.8",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.4.8",
    "@testing-library/jest-dom": "^5.16.1",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.11.12",
    "@types/prompts": "^2.4.0",
    "@types/puppeteer": "^5.4.4",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.17",
    "@types/testing-library__jest-dom": "^5.14.2",
    "@types/yargs": "^17.0.7",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "cross-env": "^7.0.3",
    "lint-staged": "^12.1.2",
    "multiplerun": "^2.0.1",
    "puppeteer": "^12.0.1",
    "react-scripts": "^4.0.3",
    "rocket-punch": "^3.0.3",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2",
    "vite": "^2.6.14",
    "vite-plugin-svgr": "^0.6.0",
    "vite-tsconfig-paths": "^3.3.17"
  }
}
